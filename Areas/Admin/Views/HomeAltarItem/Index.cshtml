@model IEnumerable<parish_bookstore.Models.HomeAltarItem>

@{
    ViewData["Title"] = "Altar Items";
    BookstoreContext context = (BookstoreContext)ViewData["Context"];
    ViewData["Header"] = "Home Altar Items";
}
<p>
    <a asp-action="Create">Add New Home Altar Item</a> | 
    <a asp-area="Admin" asp-controller="HomeAltarItemCategory" asp-action="Index">Manage Categories</a> 
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @context.BookCategories.Find(item.CategoryId).CategoryName.ToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HomeAltarItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HomeAltarItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HomeAltarItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
