@model parish_bookstore.Models.Book

@{
    ViewData["Title"] = "Edit Book";
    BookstoreContext context = (BookstoreContext)ViewData["Context"];
    ViewData["Header"] = "Edit Book";
}

<div>
    <div>
        <form asp-action="Edit">
			<div asp-validation-summary="ModelOnly"></div>
			<input type="hidden" asp-for="BookId"/>
            <div class="row">
                <div class="column">
					<label asp-for="BookCategoryId"></label>
                </div>
				<div class="column">
					<input asp-for="BookCategoryId"/>
					<span asp-validation-for="BookCategoryId"></span>
				</div>
			</div>
			<div class="row">
                <div class="column">
					<label asp-for="Title"></label>
                </div>
            	<div class="column">
					<input asp-for="Title"/>
					<span asp-validation-for="Title"></span>
                </div>
            </div>
			<div class="row">
                <div class="column">
					<label asp-for="Author"></label>
                </div>
            	<div class="column">
					<input asp-for="Author"/>
					<span asp-validation-for="Author"></span>
                </div>
            </div>
			<div class="row">
                <div class="column">
					<label asp-for="Publisher"></label>
                </div>
            	<div class="column">
					<input asp-for="Publisher"/>
					<span asp-validation-for="Publisher"></span>
                </div>
            </div>
			<div class="row">
                <div class="column">
					<label asp-for="PublishYear"></label>
                </div>
            	<div class="column">
					<input asp-for="PublishYear"/>
					<span asp-validation-for="PublishYear"></span>
                </div>
            </div>
			<div class="row">
                <div class="column">
					<label asp-for="ISBN"></label>
                </div>
            	<div class="column">
					<input asp-for="ISBN"/>
					<span asp-validation-for="ISBN"></span>
                </div>
            </div>
			<div class="row">
                <div class="column">
					<label asp-for="Price"></label>
                </div>
            	<div class="column">
					<input asp-for="Price"/>
					<span asp-validation-for="Price"></span>
                </div>
            </div>
			<div class="row">
                <div class="column">
					<label asp-for="Description"></label>
                </div>
            	<div class="column">
					<input asp-for="Description"/>
					<span asp-validation-for="Description"></span>
                </div>
            </div>
			<div>
                <input type="submit" class="submitButton" value="Save Changes"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="backToIndex"> &larr; Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
