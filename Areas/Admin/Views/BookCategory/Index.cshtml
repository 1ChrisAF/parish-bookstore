@model IEnumerable<parish_bookstore.Models.BookCategory>

@{
    ViewData["Title"] = "Book Categories";
    ViewData["Header"] = "Book Categories";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    @if (item.BookCategoryId != 1)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookCategoryId">Edit</a> | 
                <a asp-action="Delete" asp-route-id="@item.BookCategoryId">Delete</a>
            </td>
        </tr>
    }
}   
    </tbody>
</table>
