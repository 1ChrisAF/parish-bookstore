@model parish_bookstore.Models.GeneralItem

@{
    ViewData["Name"] = "Create Item";
    ViewData["Header"] = "Create Item";
}

<div>
    <div>
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>
