<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - parish_bookstore</title>
    <link rel="stylesheet" href="~/wwwroot/css/normalize.css">
    <link rel="stylesheet" href="~/css/scratch.css">
</head>
<body>
    <header>
        <img id="headerLeft" src="~/media/headerImage.png" alt="cross image">
        <h2 id="headerRight">St. Anthony Parish Bookstore</h2>
    </header>
    </header>
    <div class="container">
        <main role="main">
            <div id="topNav">
                <nav>
                    <ul>
                        <li>HOME</li>
                        <li>PARISH SITE</li>
                        <li>AFR STORE</li>
                    </ul>
                </nav>
            </div>
            <div id="sideNav">
                <nav>
                    <ul>
                        <li class="listItem">Books</li>
                        <li class="listItem">Icons</li>
                        <li class="listItem">Home Altar</li>
                        <li class="listItem">Prayer Ropes</li>
                        <li class="listItem">Gifts</li>
                        <li id="lastListItem">Misc.</li>
                    </ul>
                </nav>
            </div>
            <div id="mainStage">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - parish_bookstore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
