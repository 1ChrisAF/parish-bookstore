@model IEnumerable<parish_bookstore.Models.Icon>

@{
    ViewData["Title"] = "Icons";
    ViewData["Header"] = "Icons";
    BookstoreContext context = (BookstoreContext)ViewData["Context"];
}

<div class="filterList">
    <p id="filterHeader">Filter by Category:</p>
    <ul>
        @foreach (IconCategory category in context.IconCategories.Where(i => i.IconCategoryId != 1).ToList())
        {
            <li><a asp-action="FilteredIndex" asp-route-id="@category.IconCategoryId">@category.CategoryName</a></li>
        }
    </ul>
</div>
<div class=itemList>
@foreach (var item in Model) {
    <div class="itemBox">
        <img src="~/media/images/@item.ImageName" class="itemImage">
        <div class="itemDetailsShelf">
            <ul>
                <li class="itemName">@Html.DisplayFor(modelItem => item.Name)</li>
                <li class="price">@Html.DisplayFor(modelItem => item.Price)</li>
            </ul>
            <a href="#" class="cartButton">Add to Cart</a> |
            <a asp-action="Details" asp-route-id="@item.IconId" class="detailsButton">Details</a>
        </div>
    </div>
}
</div>
