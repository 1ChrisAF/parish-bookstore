@model parish_bookstore.Models.HomeAltarItem

@{
    ViewData["Title"] = "Item Details";
    BookstoreContext context = (BookstoreContext)ViewData["Context"];
    ViewData["Header"] = "Item Details";
}

<h1>Details</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>
