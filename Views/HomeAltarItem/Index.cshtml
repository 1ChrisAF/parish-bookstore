@model IEnumerable<parish_bookstore.Models.HomeAltarItem>

@{
    ViewData["Title"] = "Altar Items";
    ViewData["Header"] = "Home altar Items";
}

<table class="table">
    <thead>
        <tr>
            <th id="firstColumnHead">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th id="lastColumnHead"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td> |
                <a asp-action="Details" asp-route-id="@item.HomeAltarItemId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
