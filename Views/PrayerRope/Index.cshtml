@model IEnumerable<parish_bookstore.Models.PrayerRope>

@{
    ViewData["Title"] = "Prayer Ropes";
    ViewData["Header"] = "Prayer Ropes";
}

<div class=itemList>
@foreach (var item in Model) {
    <div class="itemBox">
        <img src="~/media/images/@item.ImageName" class="itemImage">
        <div class="itemDetailsShelf">
            <ul>
                <li class="itemName">@Html.DisplayFor(modelItem => item.KnotCount)-Knots</li>
                <li class="bookAuthor">@Html.DisplayFor(modelItem => item.Material)</li>
                <li class="price">@Html.DisplayFor(modelItem => item.Price)</li>
            </ul>
            <a href="#" class="cartButton">Add to Cart</a> |
            <a asp-action="Details" asp-route-id="@item.PrayerRopeId" class="detailsButton">Details</a>
        </div>
    </div>
}
</div>
